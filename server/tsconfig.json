{
  "compilerOptions": {
    /* Base Options: */
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* We are not transpiling with TypeScript: */
    "moduleResolution": "bundler",
    "module": "esnext",
    "noEmit": true,

    /* Our code doesn't run in the DOM: */
    "lib": ["es2022"]
  },
}
