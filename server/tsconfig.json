{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "allowJs": false,
    "resolveJsonModule": true,

    "noEmitOnError": false
  },
  "include": ["src"]
}
